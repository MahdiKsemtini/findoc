<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:elevation="8dp"
    app:cardBackgroundColor="#80B2D7"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:id="@+id/idDoctorItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <!--text view for our course name-->
        <TextView
            android:id="@+id/TVAppintmentDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Doctor Name"
            android:textColor="@color/white"
            android:textSize="17sp" />

        <!--text view for our course duration-->
        <TextView
            android:id="@+id/TVAppointmentTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Doctor Email"
            android:textColor="@color/white"
            android:textSize="17sp" />

        <!--text view for our course description-->
        <TextView
            android:id="@+id/TVApnDoctorName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Doctor Adress"
            android:textColor="@color/white"
            android:textSize="17sp" />
    </LinearLayout>

</androidx.cardview.widget.CardView>
